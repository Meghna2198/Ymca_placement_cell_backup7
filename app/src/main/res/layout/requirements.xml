<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d7874"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="#1d7874"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/logo"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"/>
            <!--
              android:layout_marginBottom="3dp"-->

            <TextView
                android:id="@+id/contact_form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:elevation="20dp"
                android:text="YMCA PLACEMENT CELL"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans" />


        </LinearLayout>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
   <!--     <EditText
            android:id="@+id/EnterUsername1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Enter branch required"
            android:layout_marginLeft="5.5dp"
            android:layout_marginRight="5.5dp"
            android:padding="20dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:textColor="#000000"
            android:inputType="textPersonName" />-->

        <EditText
            android:id="@+id/cgpa_required"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="20dp"
            android:hint="Enter minimum CGPA"
            android:layout_marginLeft="5.5dp"
            android:layout_marginRight="5.5dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginBottom="20dp"
            android:inputType="number" />

            <EditText
                android:id="@+id/salary_given"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter salary to be paid"
                android:layout_marginLeft="5.5dp"
                android:layout_marginRight="5.5dp"
                android:padding="20dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:inputType="number"
                android:layout_marginBottom="20dp"/>

<!--
        <EditText
            android:id="@+id/editText7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Skills Required"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:layout_marginLeft="5.5dp"
            android:layout_marginRight="5.5dp"
            android:background="@android:drawable/dialog_holo_light_frame"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/requirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:ems="10"
                android:textSize="20sp"
                android:elevation="4dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="SUBMIT"
                android:padding="10dip"
                android:textAlignment="center"
                android:textColor="#fff" />

            <Button
                android:id="@+id/exit_requirementsbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:ems="10"
                android:padding="10dip"
                android:textSize="20sp"
                android:elevation="4dp"
                android:text="EXIT"
                android:textColorLink="#0000"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>